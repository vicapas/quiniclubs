<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_lista_partidos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/titulo_lista_partido"
        android:id="@+id/lb_lista_nombre_partido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lb_nombre_partido"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_margin="0dp" />

    <ImageView
        style="@style/escudos"
        android:id="@+id/iv_escudo_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lb_lista_nombre_partido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        />

    <ImageView
        style="@style/escudos"
        android:id="@+id/iv_escudo_visitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lb_lista_nombre_partido"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lb_lista_nombre_partido"
        android:layout_toRightOf="@+id/iv_escudo_local"
        android:layout_toEndOf="@+id/iv_escudo_local"
        android:layout_toLeftOf="@+id/iv_escudo_visitante"
        android:layout_toStartOf="@+id/iv_escudo_visitante"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="1"
            android:id="@+id/cb_pronostico_1"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/cb_pronostico_X"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/cb_pronostico_2"
            />
    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/apptheme_darker"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--/>-->

</RelativeLayout>
