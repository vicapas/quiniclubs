<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor_principal_crear"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/fondo_layouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kamarena.pfc.quiniclubs.QuinielaUsuario">

        <TextView
            style="@style/titulo_layouts"
            android:id="@+id/tv_titulo_crear"
            android:textColor="#FFFFFF"
            android:background="@color/apptheme_darker"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_nueva_title"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/et_comunidad_crear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_titulo_crear"
            android:hint="@string/hint_nueva_codigo"
            android:inputType="text"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_password_crear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/et_comunidad_crear"
            android:hint="@string/hint_login_password"
            android:inputType="textPassword"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_nombre_crear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/et_password_crear"
            android:hint="@string/hint_nombre"
            android:inputType="textPersonName"
            />

        <LinearLayout
            android:id="@+id/lay_crear_buttons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/bt_cancelar_crear"
                style="@style/boton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/bt_cancelar"
                />

            <Button
                android:id="@+id/bt_crear"
                style="@style/boton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/bt_nueva"
                />

        </LinearLayout>

    </RelativeLayout>

    <!-- Lista menu de la izquierda -->
    <ListView
        android:id="@+id/menu_drawer_crear"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="@color/apptheme_color"
        android:choiceMode="singleChoice"
        android:divider="@color/secondary_color"
        android:padding="0dp"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>