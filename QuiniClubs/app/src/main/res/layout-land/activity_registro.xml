<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fondo_layouts"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kamarena.pfc.quiniclubs.Registro"
    >

    <LinearLayout
        android:id="@+id/lay_registro_titulo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:id="@+id/iv_registro_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/lb_registro_titulo"
            style="@style/titulo_layouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/titulo_registro"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_registro_user"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_registro_titulo"
        >

        <EditText
            android:id="@+id/et_registro_usuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="text"
            android:hint="@string/hint_usuario"
            />

        <EditText
            android:id="@+id/et_registro_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="textEmailAddress"
            android:hint="@string/hint_email"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_registro_pass"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_registro_user"
        >

        <EditText
            android:id="@+id/et_registro_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="textPassword"
            android:hint="@string/hint_password"
            />

        <EditText
            android:id="@+id/et_registro_password2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="textPassword"
            android:hint="@string/hint_password2"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_registro_names"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_registro_pass"
        >

        <EditText
            android:id="@+id/et_registro_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="textPersonName"
            android:hint="@string/hint_nombre"
            />

        <EditText
            android:id="@+id/et_registro_apellidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="textPersonName"
            android:hint="@string/hint_apellidos"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_registro_buttons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/bt_registro_cancelar"
            style="@style/boton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/bt_cancelar"
            />

        <Button
            android:id="@+id/bt_registro_registrar"
            style="@style/boton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/bt_registrar"
            />

    </LinearLayout>

</RelativeLayout>